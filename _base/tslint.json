{
    "defaultSeverity": "warn",
    "extends": ["tslint:latest", "tslint-eslint-rules", "tslint-consistent-codestyle", "tslint-config-prettier", "prettier"],
    "jsRules": {
        "semicolon": [true, "never"] /* Semicolons are not free, remove them */
    },
    "rules": {
        "no-console": [false],
        "variable-name": [true, "check-format", "ban-keywords", "allow-pascal-case", "allow-leading-underscore"],
        "quotemark": [true, "single", "avoid-escape", "jsx-single", "avoid-template"],
        "semicolon": [true, "never"] /* Semicolons are not free, remove them */,
        "object-literal-sort-keys": false
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": ["node_modules"]
    }
}
