{
  "defaultSeverity": "warn",
  "extends": [
    "tslint:latest",
    "tslint-eslint-rules",
    "tslint-consistent-codestyle",
    "tslint-config-prettier",
	"prettier"
  ],
  "jsRules": {
    "semicolon": [true, "never"] /* Semicolons are not free, remove them */
  },
  "rules": {
    "no-console": [false],
	"variable-name": [
		true,
		"check-format",
        "ban-keywords",
        "allow-pascal-case",
		"allow-leading-underscore"
	],
    "quotemark": [
      true,
      "double",
      "avoid-escape",
      "jsx-double",
      "avoid-template"
    ],
    "semicolon": [true, "never"] /* Semicolons are not free, remove them */
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": ["node_modules"]
  }
}
